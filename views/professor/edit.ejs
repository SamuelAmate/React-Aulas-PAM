<div class="card shadow-sm">
    <div class="card-body">
      <h1 class="h4 mb-3">Editar professor</h1>
      <form action="/professor/<%= id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="nome">Nome</label>
          <input 
            type="text" 
            name="nome" 
            id="nome" 
            class="form-control" 
            value="<%= professor.nome %>" 
            required
          >
        </div>
  
        <div class="form-group mt-2">
          <label for="curso">Curso</label>
          <textarea 
            name="curso" 
            id="curso" 
            class="form-control" 
            rows="1"
          ><%= professor.curso %></textarea>
        </div>
  
        <button type="submit" class="btn btn-primary mt-3">Salvar</button>
      </form>

      <form action="/professor/<%= id %>?_method=DELETE" method="POST" class="mt-3">
        <button type="submit" class="btn btn-danger">Deletar</button>
      </form>
    </div>
  </div>